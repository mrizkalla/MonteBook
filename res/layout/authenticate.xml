<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/auth_tvSchoolName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/auth_tvSchoolAddress1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_address1" />

            <TextView
                android:id="@+id/auth_tvSchoolAddress2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_address2" />
            
            <TextView
                android:id="@+id/auth_tvSchoolPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_phone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
